# Example environment variables for movie_ticket_booking

# Database configurations (assumed PostgreSQL)
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret
POSTGRES_DB=movie_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Eureka Server
EUREKA_URL=http://eureka-server:8761/eureka

# JWT Secret (for user-service and api-gateway)
JWT_SECRET=your_jwt_secret_key_here

# API Gateway
GATEWAY_PORT=8080

# Service-specific database URLs (example for booking-service)
BOOKING_DB_URL=jdbc:postgresql://db:5432/booking_db
MOVIE_DB_URL=jdbc:postgresql://db:5432/movie_db
SHOWTIME_DB_URL=jdbc:postgresql://db:5432/showtime_db
SEAT_DB_URL=jdbc:postgresql://db:5432/seat_db
PAYMENT_DB_URL=jdbc:postgresql://db:5432/payment_db
NOTIFICATION_DB_URL=jdbc:postgresql://db:5432/notification_db
USER_DB_URL=jdbc:postgresql://db:5432/user_db

# External services (e.g., payment provider, notification)
PAYMENT_PROVIDER_API_KEY=your_payment_provider_key
NOTIFICATION_PROVIDER_API_KEY=your_notification_provider_key